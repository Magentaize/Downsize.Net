<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>Downsize.Net</PackageId>
    <Authors>Magentaize</Authors>
    <Product>Downsize.Net</Product>
    <Description>Tag-safe HTML and XML text-truncation!</Description>
    <Company />
    <Copyright>Copyright Â© 2017 Magentaize</Copyright>
    <PackageLicenseUrl>https://www.gnu.org/licenses/gpl.html#content</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/Magentaize/Downsize.Net</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <RepositoryUrl></RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.ValueTuple" Version="4.4.0" />
  </ItemGroup>

</Project>
